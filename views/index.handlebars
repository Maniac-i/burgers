<div class="container">
  <div class="align-content-center">

    <div class='row justify-content-center'>
      <img
        src="/assets/img/kisspng-hamburger-cheeseburger-mcdonald-s-big-mac-veggie-b-burger-5acbad165690d9.1368105815232975583546.png"
        height="500" alt="burger">
    </div>
    <div class="row justify-content-center">
      <h1 class-"col"> EAT THE BURGER!</h1>
    </div>
    <br>

    <div class="row">
      <div class="col-sm justify-content-center" id="left-column">
        <ul class="w-75 mx-auto list-group">
          {{#each burgers}}
          {{#unless devoured}}
          <li class="list-group-item"> {{ id }} {{ burger_name }}
            <button class="devour" data-id="{{this.id}}">Devour!</button>
          </li>
          {{/unless}}
          {{/each}}
        </ul>
      </div>

      <div class="col-sm justify-content-center" id="right-column">
        <ul class="w-75 mx-auto ist-group">
          {{#each burgers}}
          {{#if devoured}}
          <li class="list-group-item"> {{ id }} {{ burger_name }}
            <button class="delete" data-id="{{id}}">Delete</button>
          </li>
          {{/if}}
          {{/each}}
        </ul>
      </div>
    </div>
    <br>
    <div class="row justify-content-center">
      <div class="w-25 justify-content-center">
        <form class="col form">
          <div class="form-group">
            <div class="pb-0 mb-0">
              <label class="pb-0 mb-0" for="exampleFormControlTextarea1">Enter Burger Name:</label>
            </div>
            <div>
              <textarea class="burgerName form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
            </div>
          </div>

          <button class="submit" type="submit">Add Burger</button>
        </form>
      </div>
    </div>
  </div>
</div>